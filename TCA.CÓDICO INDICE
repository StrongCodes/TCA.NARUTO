{
    switch (Opçao)
    {
    case 1:
        strcpy(StrAux, "Estudante da Academia");
        break;

    case 2:
        strcpy(StrAux, "Genin");
        break;

    case 3:
        strcpy(StrAux, "Chunin");
        break;

    case 4:
        strcpy(StrAux, "Tokubetsu Jounin");
        break;

    case 5:
        strcpy(StrAux, "Jounin");
        break;

    case 6:
        strcpy(StrAux, "ANBU");
        break;

    case 7:
        strcpy(StrAux, "Kage");
        break;
    }
}

